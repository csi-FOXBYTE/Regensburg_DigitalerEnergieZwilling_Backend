@startuml
left to right direction
skinparam rectangle {
  BackgroundColor #F7F7F7
  BorderColor #444444
}

title Frontend-Architektur

rectangle "Astro Build\n(Static Site Generator)" as astro
rectangle "Statische Assets\n(HTML/JS/CSS)" as assets
rectangle "Public Client\n(Bürgerbereich)" as public_client
rectangle "Admin Client\n(Fachpersonal)" as admin_client
rectangle "Simulationskern\n(JS-Modul)" as core
rectangle "Tiles Gateway\n(3D Tiles: PV-Textur, Bäume)" as tiles
rectangle "Backend API\n(öffentlich)" as api_public
rectangle "Backend API\n(admin)" as api_admin
rectangle "Basemap Services\n(WMS/WMTS)" as basemap

astro --> assets
assets --> public_client
assets --> admin_client
public_client --> core
admin_client --> core
public_client --> tiles
